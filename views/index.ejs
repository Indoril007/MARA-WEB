<!DOCTYPE html>
<html >
  <head>
    <title><%= title %></title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
	<link rel='stylesheet' href='/stylesheets/dropzone.css' />
	<link rel='stylesheet' href='/stylesheets/angular.cropper.min.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
	
	
  </head>
  
  <body ng-app="app">

  <h1><%= title %></h1>
  <p>Welcome to <%= title %></p>
	
	<div id="cropController" ng-controller="cropController">
	
		<form action="/targets/upload"
		  class="dropzone"
		  id="my-dropzone"></form>
		  
		<div>
			<button id="start-upload" class="btn btn-primary">
				<span class="glyphicon glyphicon-upload"></span>
				<span> Start Upload </span>
			</button>
			<button id="test-button" ng-click="selectImage(1)">
				<span>Test Button</span>
			</button>
		</div>
		
	
		<img id="image-cropper" ng-src="{{ selected.src }}" croppable="" crop-show="selected.active" crop-name="croppedImage" />
		<br>
		<img id="cropped-image" data-ng-src="{{ $croppable.croppedImage.$data.base64 }}" />
		
		<button id="base64-post" ng-click="postBase64()">
			<span>Base64 Upload</span>
		</button>
		
		<button id="augmentation-add">
			<span>Add Image as Augmentation</span>
		</button>
		
		<div ng-back-img="{{ $croppable.croppedImage.$data.base64 }}" id="overlay-canvas">
			
		</div>
		
	</div>
	
	<script src="https://code.jquery.com/jquery-3.1.0.min.js"   integrity="sha256-cCueBR6CsyA4/9szpPfrX3s49M9vUU5BgtiJj06wt/s="   crossorigin="anonymous"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.min.js"></script>
	<script src="js/dropzone.js"></script>
	<script src="js/interact.js"></script>
	<script src="js/angular.cropper.min.js"></script>
	<script src="js/index.js"></script>
</body>
  
</html>

